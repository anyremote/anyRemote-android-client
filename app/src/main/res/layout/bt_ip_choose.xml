<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <RadioGroup
            android:id="@+id/searchGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/BTCheckbox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/bluetooth" />

            <RadioButton
                android:id="@+id/IPCheckbox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/tcpip" />

        </RadioGroup>
   
        <CheckBox
            android:id="@+id/Zeroconf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/zeroconf" />
            
   </LinearLayout>
    
   <LinearLayout
        android:id="@+id/btipBtnBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btipDialogButtonOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:text="@string/btnOk" >
        </Button>

        <Button
            android:id="@+id/btipDialogButtonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:text="@string/btnCancel" >
        </Button>
    </LinearLayout>
    
</LinearLayout>
